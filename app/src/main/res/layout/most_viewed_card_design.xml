<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mv_imageID"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/usa" />

        <TextView
            android:id="@+id/mv_titleID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mv_imageID"
            android:fontFamily="@font/capriola"
            android:text="USA"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/mv_ratingID"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mv_titleID"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mv_imageID"
            android:rating="5" />

        <TextView
            android:id="@+id/mv_descID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mv_ratingID"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mv_imageID"
            android:text="aads asdf dfgfgh  ghwr  wrt  hyt  gsdf tg wtr sb df" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>